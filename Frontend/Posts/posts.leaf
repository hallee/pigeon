#embed("header")
#embed("nav")
<h1>#(plural)</h1>

#if(count(items) == 0) {
<h2>No #lowercase(category.plural) found.</h2>
} else {
	<h1>#(category.plural)</h1>
}

#for(item in items) {
<h2>
	<a href="/content/#(category.plural)/#(item.id)">
	#for(field in item.content) {
		#if(isFirst) { #(field.value) }
	}
	<span class="date">#(item.date)</span>
	</a>
</h2>
}

<a href="/content/#(category.plural)/create">Create a #lowercase(category.name)</a>
