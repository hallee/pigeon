#embed("header")
#embed("nav")
<h1>#(category.plural)</h1>
#if(count(items) == 0) {
	<h2>No #lowercase(category.plural) found.</h2>
}
<section class="content">
<div id="posts">
#embed("errors")
<table class="list">
#for(item in items) {
#if(isFirst) {
	#for(field in item.content) {
		#if(isFirst) {
		<tr>
			<th>#(field.name)</th>
			<th>Author</th>
			<th>Created</th>
			<th></th>
		</tr>
		}
	}
}
<tr>
	<td>
	<a href="/content/#(category.plural)/#(item.id)">
	#for(field in item.content) {
		#if(isFirst) { #(field.value) }
	}
	</a>
	</td>
	<td>
		<a href="/content/#(category.plural)/#(item.id)">
			#if(item.authors) {
				#for(author in item.authors) {
					#(author.name)
				}
			}
		</a>
	</td>
	<td>
		<a href="/content/#(category.plural)/#(item.id)">
		#date(item.created, shared.user.timeZoneName, "y/MM/dd")
		</a>
	</td>
	<td>
		<button
			type="button"
			v-on:click="deletePost(#js(item.id))"
		>
			Remove
		</button>
	</td>
</tr>
}
</table>

<p><a href="/content/#(category.plural)/create">Create a #lowercase(category.name)</a></p>
</div>
</section>

<script src="https://cdn.jsdelivr.net/npm/vue"></script>
<script>
	var create = new Vue({
		el: '#posts',
		data: {
			errors: []
		},
		methods: {
			deletePost: function(id) {
				const self = this
				self.errors = []
				var xhr = new XMLHttpRequest()
				console.log(`/content/#(category.plural)/${id}`)
				xhr.open('DELETE', `/content/#(category.plural)/${id}`, true)
				xhr.setRequestHeader('Content-Type', 'application/json; charset=UTF-8')
				xhr.send()

				xhr.onloadend = function () {
					if ( xhr.status === 200 ) {
						window.location.reload()
						return
					}

					if ( xhr.responseText ) {
						try {
							const response = JSON.parse(xhr.responseText)
							if (response.error) {
								self.handleError(response.reason)
							}
						} catch(e) {
							self.handleError(xhr.responseText)
						}
					}
				}
			},
			handleError: function(error) {
				this.errors.push(error)
			}
		}
	})
</script>
#embed("footer")

